# =========================
# AgentLink Platform Environment Configuration
# =========================
# Copy this file to .env.local for local development
# DO NOT commit .env.local to version control

# =========================
# Application
# =========================
APP_ENV=development
APP_NAME=AgentLink
APP_URL=http://localhost:3000
API_URL=http://localhost:8080
PROXY_URL=http://localhost:8081

# =========================
# Database (PostgreSQL)
# =========================
DATABASE_URL=postgres://agentlink:agentlink_dev@localhost:5432/agentlink?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=agentlink
DB_PASSWORD=agentlink_dev
DB_NAME=agentlink

# =========================
# Redis
# =========================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =========================
# JWT Authentication
# =========================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# =========================
# Encryption (AES-256-GCM)
# =========================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-key-change-in-production

# =========================
# AI Providers
# =========================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Default AI Provider
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-4

# =========================
# Payment - Stripe
# =========================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =========================
# Payment - Coinbase Commerce
# =========================
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_WEBHOOK_SECRET=your-coinbase-webhook-secret

# =========================
# Blockchain (Base/Polygon)
# =========================
# Use testnet for development
BLOCKCHAIN_NETWORK=base-sepolia
BLOCKCHAIN_RPC_URL=https://base-sepolia.g.alchemy.com/v2/your-alchemy-key
BLOCKCHAIN_PRIVATE_KEY=your-wallet-private-key
BLOCKCHAIN_CONTRACT_ADDRESS=

# =========================
# Object Storage (S3/MinIO)
# =========================
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=agentlink-files
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_USE_PATH_STYLE=true

# =========================
# Email Service
# =========================
# Options: sendgrid, resend, smtp
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@agentlink.local
SMTP_FROM_NAME=AgentLink

# SendGrid (production)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Resend (alternative)
RESEND_API_KEY=re_your-resend-api-key

# =========================
# Rate Limiting
# =========================
RATE_LIMIT_FREE_USER=10
RATE_LIMIT_PAID_USER=1000
RATE_LIMIT_WINDOW_SECONDS=60

# =========================
# Quota Settings
# =========================
FREE_QUOTA_INITIAL=100
TRIAL_CALLS_PER_AGENT=3

# =========================
# Logging
# =========================
LOG_LEVEL=debug
LOG_FORMAT=json

# =========================
# Monitoring
# =========================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =========================
# CORS
# =========================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =========================
# Feature Flags
# =========================
FEATURE_BLOCKCHAIN_ENABLED=false
FEATURE_RAG_ENABLED=true
FEATURE_CRYPTO_PAYMENT_ENABLED=false
